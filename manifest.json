{
  "manifest_version": 3,
  "name": "Joby Security Extension",
  "version": "2.2",
  "description": "Analyzes email headers and bodies directly within your browser to provide a phishing confidence score and highlights suspicious elements. Uses heuristics and an optional AI integration via an OpenAIâ€‘style API endpoint to improve accuracy.",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "Email Phishing Analyzer",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png"
    }
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}